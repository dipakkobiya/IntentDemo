<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.task.demo.checkbox.demo.CheckBoxDemoActivity">

    <include layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Select Your Programming language"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/chkbAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="20dp"
            android:text="Android"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/chkbJava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="20dp"
            android:text="Java"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/chkbPhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="20dp"
            android:text="PHP"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_gravity="center"
            android:id="@+id/chkbPython"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="20dp"
            android:text="Python"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#ec0505"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtselectedLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

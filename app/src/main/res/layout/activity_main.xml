<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.task.demo.MainActivity">

    <include layout="@layout/app_bar"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnIntent"
            android:layout_marginTop="20dp"
            android:textColor="#ec0505"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Intent Demo"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/btnToolbar"
            android:layout_marginTop="20dp"
            android:textColor="#ec0505"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Toolbar Demo"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/btnRadioButton"
            android:layout_marginTop="20dp"
            android:textColor="#ec0505"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Radio Button Demo"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/btnCheckBox"
            android:layout_marginTop="20dp"
            android:textColor="#ec0505"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Checkbox Demo"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/btnIncremnetDecrement"
            android:layout_marginTop="20dp"
            android:textColor="#ec0505"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Checkbox Demo"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="60dp" />



    </LinearLayout>



</LinearLayout>
